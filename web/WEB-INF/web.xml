    <security-constraint>
        <web-resource-collection>
            <web-resource-name>cart</web-resource-name>
            <url-pattern>/controller/cart</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>CUSTOMER</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>manage</web-resource-name>
            <url-pattern>/controller/manage</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
        </auth-constraint>
    </security-constraint>
    
    <security-role>
        <role-name>>ADMIN</role-name>
    </security-role>
     <security-role>
        <role-name>>CUSTOMER</role-name>
    </security-role>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
